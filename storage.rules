rules_version = '2';

// Allow authenticated users to read and write their own files
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read and write invoice files
    match /invoices/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to upload PDF files with their UID in the path
    match /invoices/{invoiceId}.pdf {
      allow read, write: if request.auth != null;
    }
    
    // Default deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
